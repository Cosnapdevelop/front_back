{
  "name": "runninghub-backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "db:push": "prisma db push",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:run": "node scripts/run-migration.js",
    "validate:auth": "node scripts/validate-auth-endpoints.js",
    "verify:production": "node scripts/verify-production-ready.js",
    "user:delete": "node scripts/delete-user-by-email.js",
    "reset:database": "node scripts/reset-database.js",
    "reset:all": "node scripts/reset-database.js && echo 'âœ… Database reset complete! Next: Open http://localhost:5173/reset-frontend.html to clear frontend data'",
    "test:gmail-smtp": "node scripts/test-gmail-smtp.js",
    "test:create-user": "node scripts/test-account-manager.js create",
    "test:list-users": "node scripts/test-account-manager.js list",
    "test:quick-setup": "node scripts/test-account-manager.js quick-setup"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "ali-oss": "^6.23.0",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "multer": "^1.4.4",
    "node-fetch": "^3.3.2",
    "node-rsa": "^1.1.1",
    "nodemailer": "^6.10.1",
    "prisma": "^6.13.0",
    "prom-client": "^15.1.3",
    "raw-body": "^2.5.2",
    "sharp": "^0.33.5",
    "winston": "^3.17.0",
    "xml2js": "^0.5.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "default",
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "NODE_OPTIONS": "--experimental-vm-modules"
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
